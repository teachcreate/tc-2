# ========================================
# TEACHCREATE.IO SERVER ENVIRONMENT VARIABLES
# ========================================

# ========================================
# 1. CORE CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000
VERCEL_URL=https://your-app.vercel.app

# ========================================
# 2. SUPABASE CONFIGURATION
# ========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ========================================
# 3. STRIPE CONFIGURATION
# ========================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_CONNECT_CLIENT_ID=ca_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ========================================
# 4. GOOGLE CLASSROOM API
# ========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_API_KEY=your-google-api-key

# ========================================
# 5. ALGOLIA SEARCH (OPTIONAL)
# ========================================
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_API_KEY=your-algolia-api-key
ALGOLIA_SEARCH_KEY=your-algolia-search-key

# ========================================
# 6. SECURITY CONFIGURATION
# ========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
SEARCH_RATE_LIMIT_MAX_REQUESTS=30

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# ========================================
# 7. LOGGING & MONITORING
# ========================================
LOG_LEVEL=info
ENABLE_SECURITY_LOGGING=true
ENABLE_AUDIT_LOGGING=true

# ========================================
# 8. PERFORMANCE & SCALING
# ========================================
MAX_REQUEST_SIZE=10mb
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# ========================================
# 9. DATABASE CONFIGURATION
# ========================================
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# ========================================
# 10. THIRD-PARTY INTEGRATIONS
# ========================================

# Email Service (SendGrid, AWS SES, etc.)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@teachcreate.io

# File Storage (AWS S3, Cloudinary, etc.)
STORAGE_SERVICE=supabase
STORAGE_BUCKET=teachcreate-assets

# ========================================
# 11. FEATURE FLAGS
# ========================================
ENABLE_LMS_INTEGRATION=true
ENABLE_LIVE_GAMING=true
ENABLE_AI_SEARCH=true
ENABLE_ANALYTICS=true

# ========================================
# 12. DEVELOPMENT & TESTING
# ========================================
ENABLE_DEBUG_MODE=false
ENABLE_TEST_ROUTES=false
MOCK_EXTERNAL_SERVICES=false

# ========================================
# IMPORTANT SECURITY NOTES:
# ========================================
# 1. NEVER commit real API keys to version control
# 2. Use different keys for development, staging, and production
# 3. Rotate secrets regularly
# 4. Use environment-specific .env files
# 5. Validate all environment variables on startup
# 6. Use strong, unique secrets for each environment
# 7. Monitor for unauthorized access attempts
# 8. Enable audit logging in production
# 9. Use HTTPS in production
# 10. Implement proper CORS policies 